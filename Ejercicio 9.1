import tkinter as tk
from tkinter import messagebox

class Contacto:
    def __init__(self, nombre, telefono, correo):
        self.nombre = nombre
        self.telefono = telefono
        self.correo = correo

class AgendaApp:
    def __init__(self):
        self.contactos = []
        self.ventana = tk.Tk()
        self.ventana.title("Ejercicio 9.1")
        self.frame_form = tk.Frame(self.ventana)
        self.frame_form.pack(pady=10)
        tk.Label(self.frame_form, text="Nombre").grid(row=0, column=0)
        self.nombre = tk.Entry(self.frame_form)
        self.nombre.grid(row=0, column=1)
        tk.Label(self.frame_form, text="Teléfono").grid(row=1, column=0)
        self.telefono = tk.Entry(self.frame_form)
        self.telefono.grid(row=1, column=1)
        tk.Label(self.frame_form, text="Correo").grid(row=2, column=0)
        self.correo = tk.Entry(self.frame_form)
        self.correo.grid(row=2, column=1)
        self.frame_botones = tk.Frame(self.ventana)
        self.frame_botones.pack()
        tk.Button(self.frame_botones, text="Agregar", command=self.agregar).grid(row=0, column=0, padx=5)
        tk.Button(self.frame_botones, text="Eliminar", command=self.eliminar).grid(row=0, column=1, padx=5)
        tk.Button(self.frame_botones, text="Ver Datos", command=self.ver).grid(row=0, column=2, padx=5)
        self.lista = tk.Listbox(self.ventana, width=40)
        self.lista.pack(pady=10)
        self.ventana.mainloop()
    def agregar(self):
        c = Contacto(self.nombre.get(), self.telefono.get(), self.correo.get())
        self.contactos.append(c)
        self.lista.insert(tk.END, c.nombre)
        self.nombre.delete(0, tk.END)
        self.telefono.delete(0, tk.END)
        self.correo.delete(0, tk.END)
    def eliminar(self):
        index = self.lista.curselection()
        if index:
            i = index[0]
            self.lista.delete(i)
            self.contactos.pop(i)
    def ver(self):
        index = self.lista.curselection()
        if index:
            i = index[0]
            c = self.contactos[i]
            messagebox.showinfo("Contacto", "Nombre: " + c.nombre + "\nTeléfono: " + c.telefono + "\nCorreo: " + c.correo)
AgendaApp()
