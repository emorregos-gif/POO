import tkinter as tk
class DivisionApp:
    def __init__(self, root):
        self.root = root
        self.root.title("División con Excepciones")
        tk.Label(root, text="Número 1:").grid(row=0, column=0)
        tk.Label(root, text="Número 2:").grid(row=1, column=0)
        self.n1 = tk.Entry(root)
        self.n2 = tk.Entry(root)
        self.n1.grid(row=0, column=1)
        self.n2.grid(row=1, column=1)
        tk.Button(root, text="Dividir", command=self.dividir).grid(row=2, column=0, columnspan=2)
        self.resultado = tk.Label(root, text="")
        self.resultado.grid(row=3, column=0, columnspan=2)
    def dividir(self):
        try:
            a = float(self.n1.get())
            b = float(self.n2.get())
            r = a / b
            self.resultado.config(text=f"Resultado: {r:.2f}")
        except ZeroDivisionError:
            self.resultado.config(text="Error: división entre cero")
        except ValueError:
            self.resultado.config(text="Error: datos inválidos")
        finally:
            self.n1.delete(0, tk.END)
            self.n2.delete(0, tk.END)
root = tk.Tk()
DivisionApp(root)
root.mainloop()
