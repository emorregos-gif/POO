import tkinter as tk
from tkinter import messagebox

class VentanaApp:
    def __init__(self):
        self.ventana = tk.Tk()
        self.ventana.title("Ejercicio 8.5")
        barra = tk.Menu(self.ventana)
        self.ventana.config(menu=barra)
        menu1 = tk.Menu(barra, tearoff=0)
        barra.add_cascade(label="Opciones", menu=menu1)
        menu1.add_command(label="Mensaje", command=self.mensaje)
        menu1.add_command(label="Salir", command=self.ventana.destroy)
        superior = tk.Frame(self.ventana, bg="lightgray", height=80)
        superior.pack(fill="x")
        tk.Label(superior, text="Panel Superior").pack(pady=10)
        central = tk.Frame(self.ventana)
        central.pack()
        tk.Label(central, text="Botón 1").grid(row=0, column=0, padx=10, pady=10)
        tk.Button(central, text="Acción 1", command=self.mensaje).grid(row=1, column=0, padx=10, pady=10)
        tk.Label(central, text="Botón 2").grid(row=0, column=1, padx=10, pady=10)
        tk.Button(central, text="Acción 2", command=self.mensaje).grid(row=1, column=1, padx=10, pady=10)
        inferior = tk.Frame(self.ventana, bg="lightgray", height=50)
        inferior.pack(fill="x")
        tk.Button(inferior, text="Aceptar", command=self.mensaje).pack(pady=10)
        self.ventana.mainloop()
    def mensaje(self):
        messagebox.showinfo("Mensaje", "Acción ejecutada")
VentanaApp()
