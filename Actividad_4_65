import tkinter as tk
class ExcepcionesAnidadasApp:
    def __init__(self, root):
        self.root = root
        self.root.title("Excepciones Anidadas")
        tk.Label(root, text="Ingrese número:").grid(row=0, column=0)
        self.valor = tk.Entry(root)
        self.valor.grid(row=0, column=1)
        tk.Button(root, text="Procesar", command=self.procesar).grid(row=1, column=0, columnspan=2)
        self.resultado = tk.Label(root, text="")
        self.resultado.grid(row=2, column=0, columnspan=2)
    def procesar(self):
        try:
            n = int(self.valor.get())
            try:
                r = 10 / n
                self.resultado.config(text=f"Resultado: {r}")
            except ZeroDivisionError:
                self.resultado.config(text="Error interno: división por cero")
        except ValueError:
            self.resultado.config(text="Error externo: entrada no numérica")
root = tk.Tk()
ExcepcionesAnidadasApp(root)
root.mainloop()
